<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         Customize your theme here.
        <item name="colorPrimary">@color/darkergray</item>
        <item name="colorPrimaryDark">@color/darkergray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/darkergray</item>
    </style>

    <style name="editText" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/edittext_color</item>
        <item name="colorControlNormal">@color/edittext_color</item>
        <item name="colorControlActivated">@color/edittext_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



</resources>
