<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/background"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/student_profile_image"
            android:layout_width="110dp"
            android:layout_height="132dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/user" />

        <ImageView
            android:id="@+id/change_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/student_profile_image"
            android:layout_alignEnd="@+id/student_profile_image"
            android:background="@drawable/round_image"
            android:src="@mipmap/edit" />

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_profile_image"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/student_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": S V Gopi Krishna"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/student_branch_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Computer Science and Engineering"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/regd_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/branch"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Regd. No"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/student_regd_no_profile"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text=": 20174063"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regd_no"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/student_email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="surapanenigopi44@gmail.com"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="D.O.B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/student_dob_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 02/05/2000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="contact"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/student_contact_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 9182344551"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/student_address_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:text="Vijayawda, AndhraPradesh"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/upload_profile"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/address"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_corners"
            android:text="update"
            android:elevation="6dp"/>
    </RelativeLayout>
</ScrollView>